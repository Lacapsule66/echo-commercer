{
  "rewrites": [
    {
      "source": "/admin",
      "destination": "/src/app/admin"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/src/app/admin/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/src/app/(site)/$1"
    }
  ],
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ]
}
